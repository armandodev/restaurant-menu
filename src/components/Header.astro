---
import Icon from "./icons/Icon.astro";
import Hamburger from "@/components/icons/Hamburger.astro";
import Close from "@/components/icons/Close.astro";

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<header
  id="top-header"
  class={`flex items-center justify-center fixed top-0 w-full z-50 h-20 ${!transparent ? "bg-white text-black" : "bg-transparent text-white"}`}
>
  <div
    class="w-full max-w-screen-lg mx-auto p-4 flex items-center justify-between gap-16"
  >
    <a href="/">
      <Icon class="w-16 h-16" />
    </a>
    <nav
      id="header-menu"
      class="fixed w-full h-dvh inset-0 bg-white text-black text-2xl flex flex-col items-center justify-center gap-4 -translate-y-full transition-transform duration-300 target:translate-y-0 md:static md:w-[initial] md:h-[initial] md:bg-[initial] md:text-xl md:flex-row md:translate-y-[initial] md:overflow-y-[initial] md:text-inherit"
    >
      <a
        href="/"
        class="hover:opacity-80 transition-opacity duration-200 ease-in-out text-shadow"
      >
        Inicio
      </a>
      <a
        href="/contact"
        class="hover:opacity-80 transition-opacity duration-200 ease-in-out text-shadow"
      >
        Contacto
      </a>
      <a
        href="/about"
        class="hover:opacity-80 transition-opacity duration-200 ease-in-out text-shadow"
      >
        Nosotros
      </a>
      <a
        class="hover:opacity-80 transition-opacity duration-200 ease-in-out text-shadow"
        href="/book"
      >
        Reservar
      </a>
      <a
        href="/rate"
        class="hover:opacity-80 transition-opacity duration-200 ease-in-out text-shadow"
      >
        Deja tu rese√±a
      </a>
      <a href="#" class="md:hidden absolute top-6 right-6">
        <Close />
      </a>
    </nav>
    <a href="#header-menu" class="md:hidden"><Hamburger /></a>
  </div>
</header>
