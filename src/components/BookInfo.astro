---
import BookForm from "@/components/BookForm.astro";
---

<article
  class="max-w-screen-lg min-h-screen mx-auto px-4 py-8 flex items-center justify-center flex-col"
>
  <section class="flex flex-col items-center justify-center w-full">
    <h1 class="text-3xl font-bold text-gray-800">Reservaciones</h1>
    <p class="text-gray-600">Reserva tu mesa en nuestro restaurante</p>
  </section>
  <section class="grid grid-cols-1 sm:grid-cols-2 mt-8 gap-4 w-full">
    <img
      src="/images/gallery/img-1.webp"
      alt="Reservaciones"
      class="hidden sm:block w-full h-full object-cover object-center rounded-lg"
    />
    <BookForm />
  </section>
</article>
